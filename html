        }

        .control-group {
            margin-bottom: 1rem;
        }

        .control-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #555;
            font-weight: 500;
        }

        .control-group select,
        .control-group input {
            width: 100%;
            padding: 0.5rem;
            border: 2px solid #eee;
