        }

        .stats {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 1rem;
            border-radius: 10px;
            text-align: center;
            margin-top: 1rem;
        }

        .stats-item {
            margin: 0.5rem 0;
        }

        /* Responsive */
        @media (max-width: 768px) {
